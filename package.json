{
  "name": "nestjs-node-rdkafka",
  "version": "1.1.1",
  "description": "A lightweight NestJS module for consuming Kafka messages using node-rdkafka",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "install:x86": "sh -c 'arch -x86_64 npm install'",
    "prepublishOnly": "npm run bump && npm run build",
    "bump": "node --experimental-modules --no-warnings scripts/bump.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galr52/nestjs-node-rdkafka.git"
  },
  "keywords": [
    "nestjs",
    "kafka",
    "rdkafka",
    "node-rdkafka",
    "microservices",
    "messaging"
  ],
  "author": "galr52",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/galr52/nestjs-node-rdkafka/issues"
  },
  "homepage": "https://github.com/galr52/nestjs-node-rdkafka#readme",
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "node-rdkafka": "^3.3.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.14.1",
    "jest": "^29.5.0",
    "lodash.head": "^4.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.ts"]
  }
}
